# Docs: https://EditorConfig.org

# Set to root config file
root = true

# Baseline settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md,COMMIT_EDITMSG]
max_line_length = 0
