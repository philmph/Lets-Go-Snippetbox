# Docs: https://EditorConfig.org

# Set to root config file
root = true

# Baseline settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# Go specific settings
[{go.mod,go.sum,*.go}]
indent_size = 4
indent_style = tab

[*.md]
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
